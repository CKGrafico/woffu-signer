{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "WOFFU_URL": {
      "type": "string",
      "defaultValue": "https://app.woffu.com"
    },
    "WOFFU_USERNAME": {
      "type": "string"
    },
    "WOFFU_PASSWORD": {
      "type": "string"
    },
    "SignInSchedule": {
      "type": "string",
      "defaultValue": "0 0 9 * * *"
    },
    "SignOutSchedule": {
      "type": "string",
      "defaultValue": "0 0 18 * * *"
    },
    "storageName": {
      "type": "string",
      "defaultValue": "woffusigner"
    },
    "appfunName": {
      "type": "string",
      "defaultValue": "woffu-signer-azfun"
    },
    "applicationInsightsName": {
      "type": "string",
      "defaultValue": "woffu-signer-appi"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2018-07-01",
      "name": "[parameters('storageName')]",
      "location": "[resourceGroup().location]",
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "StorageV2"
    },
    {
      "apiVersion": "2015-05-01",
      "name": "[parameters('aiName')]",
      "type": "Microsoft.Insights/components",
      "kind": "web",
      "location": "[resourceGroup().location]",
      "tags": {
        "[concat('hidden-link:', resourceGroup().id, '/providers/Microsoft.Web/sites/', parameters('appfunName'))]": "Resource"
      },
      "properties": {
        "Application_Type": "web",
        "ApplicationId": "[parameters('aiName')]"
      }
    },
    {
      "apiVersion": "2015-08-01",
      "type": "Microsoft.Web/sites",
      "name": "[parameters('appfunName')]",
      "location": "[resourceGroup().location]",
      "kind": "functionapp,linux",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageName'))]",
        "[resourceId('Microsoft.Insights/components', parameters('aiName'))]"
      ],
      "properties": {
        "siteConfig": {
          "appSettings": [
            {
              "name": "AzureWebJobsDashboard",
              "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', parameters('storageName'), ';AccountKey=', listKeys(parameters('storageName'),'2015-05-01-preview').key1)]"
            },
            {
              "name": "AzureWebJobsStorage",
              "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', parameters('storageName'), ';AccountKey=', listKeys(parameters('storageName'),'2015-05-01-preview').key1)]"
            },
            {
              "name": "FUNCTIONS_EXTENSION_VERSION",
              "value": "~3"
            },
            {
              "name": "FUNCTIONS_WORKER_RUNTIME",
              "value": "node"
            },
            {
              "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
              "value": "[reference(resourceId('microsoft.insights/components/', parameters('aiName')), '2015-05-01').InstrumentationKey]"
            },
            {
              "name": "WOFFU_URL",
              "value": "[parameters('WOFFU_URL')]"
            },
            {
              "name": "WOFFU_USERNAME",
              "value": "[parameters('WOFFU_USERNAME')]"
            },
            {
              "name": "WOFFU_PASSWORD",
              "value": "[parameters('WOFFU_PASSWORD')]"
            },
            {
              "name": "SignInSchedule",
              "value": "[parameters('SignInSchedule')]"
            },
            {
              "name": "SignOutSchedule",
              "value": "[parameters('SignOutSchedule')]"
            },
            {
              "name": "WEBSITE_NODE_DEFAULT_VERSION",
              "value": "12.17.0"
            },
            {
              "name": "WEBSITE_RUN_FROM_PACKAGE",
              "value": "https://github.com/Duber/woffu-signer/releases/download/latest/woffu-signer-latest.zip"
            }
          ]
        },
        "linuxFxVersion": "Node|12",
        "reserved": true
      }
    }
  ],
  "outputs": {}
}